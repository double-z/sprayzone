# Ensure that Apache listens on port 80
Listen 80

# Listen for virtual host requests on all IP addresses
NameVirtualHost *:80

<VirtualHost *:80>
  ServerAdmin webmaster@ama.ab.ca

  ServerName <%= APP_NAME %>
  DocumentRoot /srv/www/<%= APP_NAME %>/public_html/
  <Directory />
          Options FollowSymLinks
          AllowOverride None
  </Directory>

  ErrorLog /srv/www/<%= APP_NAME %>/logs/error.log
  LogLevel warn

  CustomLog /srv/www/<%= APP_NAME %>/logs/access.log combined
</VirtualHost>


