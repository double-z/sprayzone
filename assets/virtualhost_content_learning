# Ensure that Apache listens on port 80
Listen 80

# Listen for virtual host requests on all IP addresses
NameVirtualHost *:80

<VirtualHost *:80>
  ServerAdmin webmaster@ama.ab.ca

  ServerName learning.ama.ab.ca
  DocumentRoot /srv/www/learning/public_html/
  <Directory />
          Options FollowSymLinkscd 
          AllowOverride None
  </Directory>

  ErrorLog /srv/www/learning/logs/error.log
  LogLevel warn

  CustomLog /srv/www/learning/logs/access.log combined
</VirtualHost>